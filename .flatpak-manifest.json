{
    "id": "org.kde.karp",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "base-version": "6.10",
    "base": "io.qt.qtwebengine.BaseApp",
    "sdk": "org.kde.Sdk",
    "command": "karp",
    "tags": [
        "nightly"
    ],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--share=network"
    ],
    "separate-locales": false,
    "modules": [
        {
            "name": "qpdf",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_INSTALL_LIBDIR=/app/lib",
                "-DLIB_INSTALL_DIR=/app/lib",
                "-DMAINTAINER_MODE=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/qpdf/qpdf/archive/refs/tags/v12.2.0.tar.gz",
                    "sha256": "2d004611699a94030a594318393f08a7352ab1cf3cee337c5312d4e7eb7f8a4f",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 5542,
                        "url-template": "https://github.com/qpdf/qpdf/archive/refs/tags/v$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "kirigamiaddons",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/libraries/kirigami-addons.git",
                    "branch": "master"
                }
            ]
        },
        {
            "name": "karp",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "dir",
                    "path": ".",
                    "skip": [
                        ".git"
                    ]
                }
            ]
        }
    ]
}
